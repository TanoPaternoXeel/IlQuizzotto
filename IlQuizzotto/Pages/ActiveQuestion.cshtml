@page
@model IlQuizzotto.Pages.ActiveQuestionModel
@{
}

<style>
		.card {
		box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
	}

	.card-body {
		padding: 2rem;
		background-color: #ffffff;
		border-radius: 10px;
	}

	.form-check-input {
		margin-right: 10px;
	}

	h2, h5 {
		font-weight: bold;
	}
</style>
<header>
	<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 bg-blue-sfumato">
		<div class="container text-center">
			<img src=""/>
		</div>
	</nav>
</header>
<div class="container mt-5">
	<h2 class="mb-4">Quiz Question</h2>
	<div class="card">
		<div class="card-body">
			<h5 class="card-title">What is the capital of Italy?</h5>
			<div class="form-check">
				<input class="form-check-input"
					   type="radio"
					   name="quizOptions"
					   id="option1"
					   value="option1" />
				<label class="form-check-label" for="option1"> Rome </label>
			</div>
			<div class="form-check">
				<input class="form-check-input"
					   type="radio"
					   name="quizOptions"
					   id="option2"
					   value="option2" />
				<label class="form-check-label" for="option2"> Milan </label>
			</div>
			<div class="form-check">
				<input class="form-check-input"
					   type="radio"
					   name="quizOptions"
					   id="option3"
					   value="option3" />
				<label class="form-check-label" for="option3"> Venice </label>
			</div>
		</div>
	</div>
</div>